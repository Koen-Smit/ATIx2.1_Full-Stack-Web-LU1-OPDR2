{
  "name": "atix2.1-fullstack-project",
  "version": "1.0.0",
  "description": "Full-stack project with Angular client and NestJS server",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "start": "npm run start:server",
    "start:client": "npm run start --workspace=client",
    "start:client:e2e": "npm run start:e2e --workspace=client",
    "start:server": "npm run start:dev --workspace=server",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "test": "npm run test --workspace=client && npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint --workspace=server",
    "clean": "rimraf client/dist client/node_modules server/dist server/node_modules node_modules",
    "dev": "npm run start:dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@nestjs/platform-express": "^11.1.6",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/jsonwebtoken": "^9.0.10",
    "jsonwebtoken": "^9.0.2"
  }
}
